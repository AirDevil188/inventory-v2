<html>
  <head>
    <title><%=title %></title>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <header><%- include('navbar') %></header>
    <%- include('sidebar') %>
    <main>
      <section class="platforms-section">
        <% if (platforms.length > 0) { %>
        <ul>
          <% platforms.forEach((platform) => { %>
          <li><%= platform.name %></li>

          <% }) %> <% } else { %>
          <div class="text-container">
            <p>There are no platforms!</p>
          </div>
          <%} %>
        </ul>
      </section>
    </main>
  </body>
</html>
