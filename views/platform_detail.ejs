<html>
  <head>
    <title><%= title %></title>
  </head>
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="stylesheet" href="/styles/navbar.css" />
  <link rel="stylesheet" href="/styles/items.css" />
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
  />
  <script src="/scripts/navbar.js" defer></script>
  <body>
    <header>
      <span class="material-symbols-outlined" id="navIcon"> menu </span>
      <h1>GameJoy</h1>
    </header>
    <%- include('navbar') %>
    <main>
      <% if (platform) { %>
      <section class="detail-section">
        <div class="title-container">
          <h3><%= platform.platform_name %></h3>
        </div>
        <% if (games) { %>
        <div class="items-container">
          <ul>
            <% games.forEach(game => { %>
            <li><a href="<%= game.game_url%>"><%= game.game_title %></a></li>
            <% }) %>
          </ul>
        </div>
        <% } %>
        <div class="button-container">
          <button type="submit">
            <a href="<%=platform.platform_url %>/delete">DELETE</a>
          </button>
          <button type="submit">
            <a href="<%=platform.platform_url %>/update">UPDATE</a>
          </button>
        </div>
      </section>
      <% } else { %>

      <p>Platform Not Found!</p>
      <% }%>
    </main>
    <%- include('footer') %>
  </body>
</html>
