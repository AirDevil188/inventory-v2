<html>
  <head>
    <title><%= title %></title>
    <body>
      <%- include('navbar') %>
      <main>
        <% if (publisher) { %>
            <section class="publisher-section">
                <div class="title-container">
                    <h3><%= publisher.publisher_name %></h3>
                </div>
                <div class="location-container">
                    <span><%= publisher.publisher_location%></span>
                </div>
                <div class="date-foundation-container">
                    <span><%= publisher.publisher_date_of_foundation %></span>
                    <span><%= publisher.publisher_close_status %></span>
                </div>
                <% if (publisher.publisher_close_status) { %>
                    <div class="status-container">
                    <span>Publisher closed</span>
                </div>
            <% } %>
            </section>
            <%  } else { %>
            
              <p>Publisher Not Found!</p>
              <% }%>
      </main>
    </body>
  </head>
</html>
