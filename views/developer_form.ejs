<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <link rel="stylesheet" href="/styles/form.css" />
  </head>
  <header><%- include('navbar') %></header>
  <body>
    <main>
      <section class="title-section">
        <div class="title-container">
          <h3><%= title %></h3>
        </div>
      </section>
      <section class="form-section">
        <form action=<%= developer ? developer.developer_url+"/update" :
        "/developers/create-developer"%> method="POST">
        <div class="form-group">
          <label for="name">Name: </label>
          <input type="text" id="name" name="name" value="<%= developer ?
          developer.developer_name : ""%>">
        </div>
        <div class="form-group">
          <label for="publisher">Publisher: </label>
          <select name="publisher" id="publisher">
            <option value="" id="">-- Select publisher --</option>
            <% publishers.forEach((publisher) => { %> <option value="<%=
            publisher.id %>" id="<%= publisher.id %>" <%=developer &&
            developer.developer_publisher === publisher.id ? 'selected' :
            ""%>><%= publisher.name %> <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="location">Location: </label>
          <input type="text" id="location" name="location" value="<%= developer
          ? developer.developer_location : "" %>">
        </div>
        <div class="form-group">
          <label for="founded">Date of Foundation: </label>
          <input type="date", id="founded", name="founded" value="<%= developer
          ? date : "" %>">
        </div>
        <div class="form-group">
          <fieldset>
            <label for="closed">Closed: </label>
            <div>
              <input type="checkbox" id="t" value = "t" name="closed" <%=
              developer && developer.developer_close_status ? 'checked' : "" %>>
              <label for="t">YES</label>
            </div>
            <div>
              <input type="checkbox" id="f" value="f" name="closed" <%=
              developer && !developer.developer_close_status ? 'checked' : ""%>>
              <label for="f">NO</label>
            </div>
          </fieldset>
        </div>
        <button type="submit">Submit</button>
      </section>
      <%- include("errors") %>
    </main>
  </body>
</html>
