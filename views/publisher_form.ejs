<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
    <link rel="stylesheet" href="/styles/form.css" />
    <link rel="stylesheet" href="/styles/navbar.css" />
    <script src="/scripts/navbar.js" defer></script>
  </head>
  <body>
    <header>
      <span class="material-symbols-outlined" id="navIcon"> menu </span>
      <h1>GameJoy</h1>
    </header>
    <%- include('navbar') %>
    <main>
      <section class="title-section">
        <h3><%= title %></h3>
      </section>

      <section class="form-section">
        <form action=<%= publisher ? publisher.publisher_url+"/update" :
        "/publishers/create-publisher"%> method="POST">
        <div class="form-group">
          <label for="name">Name: <span class="asterix">*</span></label>
          <input type="text" id="name" name="name" value="<%=publisher ?
          publisher.publisher_name : "" %>" required>
        </div>
        <div class="form-group">
          <label for="location">Location: <span class="asterix">*</span></label>
          <input type="text" id="location" name="location" value="<%= publisher
          ? publisher.publisher_location : "" %>" required>
        </div>
        <div class="form-group">
          <label for="founded"
            >Date of Foundation: <span class="asterix">*</span>
          </label>
          <input type="date", id="founded", name="founded" value="<%= publisher
          ? date : "" %>" required>
        </div>
        <div class="form-group">
          <fieldset>
            <legend>
              Status - CLOSED - YES/NO <span class="asterix">*</span>
            </legend>
            <div>
              <input type="radio" id="yes" required name="closed" value="t" <%=
              publisher && publisher.publisher_close_status ? 'checked' : '' %>>
              <label for="yes">YES</label>
            </div>
            <div>
              <input type="radio" id="no" name="closed" value="f" <%= publisher
              && !publisher.publisher_close_status ? 'checked' : '' %>>
              <label for="no">NO</label>
            </div>
          </fieldset>
        </div>
        <button type="submit">Submit</button>
      </section>
      <%- include("errors") %>
    </main>
    <%- include('footer') %>
  </body>
</html>
