<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <%- include('navbar') %>
        <main>
            <section class="title-section">
                <h3><%= title %></h3>
            </section>

            <section class="form-section">
                <form action="/publishers/create-publisher" method="POST">
                    <div class="form-group">
                        <label for="name">Name: </label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="location">Location: </label>
                        <input type="text" id="location" name="location">
                    </div>
                    <div class="form-group">
                        <label for="founded">Date of Foundation: </label>
                        <input type="date", id="founded", name="founded" required>
                    </div>
                    <div class="form-group">
                        <fieldset>
                            <legend>Status - CLOSED - YES/NO</legend>
                        <div>
                            <input type="radio" id="yes" name="closed" value="t">
                            <label for="yes" >YES</label>
                        </div>
                        <div>
                            <input type="radio" id="no" name="closed" value="f">
                            <label for="no">NO</label>
                        </div>
                    </fieldset>
                    </div>
                    <div class="button-container">
                        <button type="submit">Submit</button>
                    </div>
                </form>
            </section>
            <%- include("errors") %>
        </main>
    </body>

</html>